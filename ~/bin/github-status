#!/bin/bash

# GitHub Account Status Checker
echo "ðŸ“Š Current GitHub Account Status"
echo "================================"

# Check Git configuration
echo "ðŸ”§ Git Configuration:"
echo "   Name: $(git config --global user.name)"
echo "   Email: $(git config --global user.email)"

# Check GitHub CLI status
if command -v gh &> /dev/null; then
    echo ""
    echo "ðŸ“ GitHub CLI Status:"
    if gh auth status &> /dev/null; then
        gh auth status
    else
        echo "   Not authenticated with GitHub CLI"
    fi
else
    echo ""
    echo "ðŸ“ GitHub CLI: Not installed"
fi

# Check SSH keys
echo ""
echo "ðŸ”‘ SSH Keys in SSH Agent:"
ssh-add -l 2>/dev/null || echo "   No SSH keys loaded"

# Check if we can identify which account is active
echo ""
echo "ðŸŽ¯ Account Detection:"
if [[ "$(git config --global user.email)" == *"personal"* ]] || [[ "$(git config --global user.email)" == *"gmail"* ]]; then
    echo "   Current: Personal Account"
elif [[ "$(git config --global user.email)" == *"work"* ]] || [[ "$(git config --global user.email)" == *"company"* ]]; then
    echo "   Current: Work Account"
else
    echo "   Current: Unknown Account"
fi 