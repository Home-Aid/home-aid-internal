#!/bin/bash

# GitHub Work Account Configuration
echo "🔄 Switching to Work GitHub Account..."

# Set Git global configuration for work account
git config --global user.name "Your Work Name"
git config --global user.email "your.work.email@company.com"

# Set GitHub CLI configuration for work account
if command -v gh &> /dev/null; then
    echo "📝 Updating GitHub CLI configuration..."
    # You can set a specific token for work account if needed
    # export GITHUB_TOKEN="your_work_github_token"
fi

# Update SSH config to use work key (if you have different SSH keys)
# This assumes you have different SSH keys for personal and work
if [ -f ~/.ssh/id_rsa_work ]; then
    echo "🔑 Setting SSH key to work..."
    ssh-add -D 2>/dev/null  # Remove all keys
    ssh-add ~/.ssh/id_rsa_work 2>/dev/null
fi

echo "✅ Switched to Work GitHub Account"
echo "   Name: $(git config --global user.name)"
echo "   Email: $(git config --global user.email)" 